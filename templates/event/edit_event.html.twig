{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block content %}
    <div class="app-user-profile">
        <h3 id="test">Modify Event</h3>
    </div>
    <div class="wrapper">
        <div class="app-event">
            {{ form_start(form, { 'attr' : { 'class': 'app-event' } }) }}
            <div class='app-event-s1'>
                {{ form_label(form.name) }} {{ form_widget(form.name) }}
                {{ form_label(form.date) }} {{ form_widget(form.date) }}
                {{ form_label(form.limitDate) }} {{ form_widget(form.limitDate) }}
                {{ form_label(form.spots) }} {{ form_widget(form.spots) }}
                {{ form_label(form.duration) }} {{ form_widget(form.duration) }}
                {{ form_label(form.description) }} {{ form_widget(form.description) }}
            </div>
            <div class='app-event-s2'>
                {{ form_label(form.campus) }} {{ form_widget(form.campus) }}
                {{ form_label(form.location) }}
                <div>{{ form_widget(form.location) }}
                    {# <a href="{{ path('add_location') }}">New</a> #}
                </div>
                <div><label for="updateStreet">Street:</label></div>
                <div><input id="updateStreet" type="text" value="{{ location.street }}"/></div>
                <div><label for="updateCode">Postal Code:</label></div>
                <div><input id="updateCode" type="text" value="{{ city.code }}"/></div>
                <div><label for="updateLat">Latitude:</label></div>
                <div><input type="number" id="updateLat" value="{{ location.latitude }}"/></div>
                <div><label for="updateLong">Longitude:</label></div>
                <div><input type="number" id="updateLong" value="{{ location.longitude }}"/></div>
            </div>
            <div class='app-event-s3'>
                {{ form_widget(form.create, {'label' : 'Modify' }) }}
                {{ form_widget(form.publish) }}
                <a href="{{ path ('cancel_event', {'event':  event.name }) }}">
                    <button class="app-event-bt" type="button">Cancel Event</button>
                </a>
                <a href="{{ path ('home') }}">
                    <button class="app-event-bt" type="button">Back</button>
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}