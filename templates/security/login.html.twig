{% extends 'base.html.twig' %}

{% block title %}Sortir ENI - Login{% endblock %}

{% block content %}
    <div class="app-login">
        <form class="app-login" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <label class="app-login" for="inputUsername">Username</label>
            <input class="app-login" type="text" value="{{ last_username }}" name="username" id="inputUsername" required
                   autofocus>

            <label class="app-login" for="inputPassword">Password</label>
            <input class="app-login" type="password" name="password" id="inputPassword" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            <div>
                <button class="app-login" type="submit">Sign in</button>
            </div>
            <div class="app-login-extra">
                <div id="app-login-checkbox">
                    <label for="_remember_me"> <input type="checkbox" id="_remember_me" name="_remember_me">Remember me</label>
                </div>
                <div>
                    <a id="_forgot_pw" href="{{ path('app_forgot_password_request') }}">Forgot Password</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
